{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "hello.cpp",
                "-O2", 
                "-lm",
                "-lpthread",
                "-lX11"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}